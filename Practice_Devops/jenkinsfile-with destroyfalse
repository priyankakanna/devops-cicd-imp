pipeline {
    agent any
    environment {
        GITHUB_URL = 'https://github.com/priyankakanna/devops-cicd-imp/tree/main/Practice_Devops/terraform'
        WORKSPACE_DIR = 'C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\terraform-pipeline'
        DESTROY_INFRA = false // Set this to true when you want to destroy
    }
    stages {
        stage('Clone GitHub Repository') {
            steps {
                script {
                    git url: 'https://github.com/priyankakanna/devops-cicd-imp.git', branch: 'main'
                }
            }
        }
        
        stage('Initialize Terraform') {
            steps {
                script {
                    dir('Practice_Devops/terraform') {
                        bat 'terraform init'
                    }
                }
            }
        }
        
        stage('Terraform Plan/Validate') {
            when {
                expression { env.DESTROY_INFRA == 'false' }
            }
            steps {
                script {
                    dir('Practice_Devops/terraform') {
                        bat 'terraform validate'
                        bat 'terraform plan'
                    }
                }
            }
        }

        stage('Terraform Apply') {
            when {
                expression { env.DESTROY_INFRA == 'false' }
            }
            steps {
                script {
                    dir('Practice_Devops/terraform') {
                        bat 'terraform apply -auto-approve'
                    }
                }
            }
        }

        stage('Terraform Destroy') {
            when {
                expression { env.DESTROY_INFRA == 'true' }
            }
            steps {
                script {
                    dir('Practice_Devops/terraform') {
                        bat 'terraform destroy -auto-approve'
                    }
                }
            }
        }

        stage('Azure Login') {
            when {
                expression { env.DESTROY_INFRA == 'false' }
            }
            steps {
                script {
                    bat """
                    az login --service-principal -u ${env.ARM_CLIENT_ID} -p ${env.ARM_CLIENT_SECRET} --tenant ${env.ARM_TENANT_ID}
                    """
                }
            }
        }

        stage('AKS Deployment') {
            when {
                expression { env.DESTROY_INFRA == 'false' }
            }
            steps {
                script {
                    bat "az aks get-credentials --resource-group aks_tf_rgpriya --name my-aks-cluster123 --admin --overwrite-existing"
                    bat "dir"
                    dir('Practice_Devops/terraform') {
                        bat "kubectl apply -f deployment.yaml"
                    }
                }
            }
        }

        stage('AKS Cleanup') {
            when {
                expression { env.DESTROY_INFRA == 'true' }
            }
            steps {
                script {
                    bat """
                    az login --service-principal -u ${env.ARM_CLIENT_ID} -p ${env.ARM_CLIENT_SECRET} --tenant ${env.ARM_TENANT_ID}
                    """
                    bat "az aks get-credentials --resource-group aks_tf_rgpriya --name my-aks-cluster123 --admin"
                    dir('Practice_Devops/terraform') {
                        bat "kubectl delete -f deployment.yaml --ignore-not-found"
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution completed.'
        }
        success {
            script {
                if (env.DESTROY_INFRA == 'true') {
                    echo 'Infrastructure destroyed successfully!'
                } else {
                    echo 'Infrastructure deployed successfully!'
                }
            }
        }
        failure {
            echo 'Pipeline failed. Please check the logs.'
        }
    }
}
